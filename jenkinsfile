pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
                // Simulate a build step (replace with actual build commands)
                sh 'exit 1' // Simulating a build failure for demonstration
            }
        }
    }

    post {
        success {
            script {
                // Sending email notification on success
                mail to: 'nimesh.makevitage@gmail.com',
                     subject: "SUCCESS: Build #${env.BUILD_NUMBER} - ${env.JOB_NAME}",
                     body: """
                     Build #${env.BUILD_NUMBER} of job '${env.JOB_NAME}' was successful.
                     Check the build details at ${env.BUILD_URL}
                     """
            }
        }
        failure {
            script {
                // Sending email notification on failure
                mail to: 'nimesh.makevitage@gmail.com',
                     subject: "FAILURE: Build #${env.BUILD_NUMBER} - ${env.JOB_NAME}",
                     body: """
                     Build #${env.BUILD_NUMBER} of job '${env.JOB_NAME}' has failed.
                     Check the build details at ${env.BUILD_URL}
                     """
            }
        }
    }
}
