pipeline {
    agent any
    
    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                echo 'Building the code...'
                // Add your build commands here
            }
            post {
                success {
                    emailext(
                        to: 'nimeshmakevitage@gmail.com',
                        subject: 'Build Successful: ${env.JOB_NAME} - Build #${env.BUILD_NUMBER}',
                        body: '''The build was successful!

                        Check the details at ${env.BUILD_URL}.
                        ''',
                        attachLog: true,  // Attach the build log
                        compressLog: true  // Compress log to reduce size (optional)
                    )
                }
                failure {
                    emailext(
                        to: 'nimeshmakevitage@gmail.com',
                        subject: 'Build Failed: ${env.JOB_NAME} - Build #${env.BUILD_NUMBER}',
                        body: '''The build failed.

                        Check the details at ${env.BUILD_URL}.
                        ''',
                        attachLog: true,  // Attach the build log
                        compressLog: true  // Compress log to reduce size (optional)
                    )
                }
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo 'Running unit and integration tests...'
                // Add your testing commands here
            }
        }
        stage('Code Analysis') {
            steps {
                echo 'Analyzing the code...'
                // Add your code analysis commands here
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Performing a security scan...'
                // Add your security scan commands here
            }
            post {
                success {
                    emailext(
                        to: 'nimeshmakevitage@gmail.com',
                        subject: 'Security Scan Successful: ${env.JOB_NAME} - Build #${env.BUILD_NUMBER}',
                        body: '''The security scan was successful!

                        Check the details at ${env.BUILD_URL}.
                        ''',
                        attachLog: true,  // Attach the build log
                        compressLog: true  // Compress log to reduce size (optional)
                    )
                }
                failure {
                    emailext(
                        to: 'nimeshmakevitage@gmail.com',
                        subject: 'Security Scan Failed: ${env.JOB_NAME} - Build #${env.BUILD_NUMBER}',
                        body: '''The security scan failed.

                        Check the details at ${env.BUILD_URL}.
                        ''',
                        attachLog: true,  // Attach the build log
                        compressLog: true  // Compress log to reduce size (optional)
                    )
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to staging...'
                // Add your deployment commands here
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running integration tests on staging...'
                // Add your integration testing commands here
            }
        }
        stage('Deploy to Production') {
            steps {
                echo 'Deploying to production...'
                // Add your production deployment commands here
            }
        }
    }

    post {
        success {
            emailext(
                to: 'nimeshmakevitage@gmail.com',
                subject: 'Build Successful: ${env.JOB_NAME} - Build #${env.BUILD_NUMBER}',
                body: '''The entire pipeline was successful!

                Check the details at ${env.BUILD_URL}.
                ''',
                attachLog: false  // No need to attach the log here, it's already attached in earlier stages
            )
        }
        failure {
            emailext(
                to: 'nimeshmakevitage@gmail.com',
                subject: 'Build Failed: ${env.JOB_NAME} - Build #${env.BUILD_NUMBER}',
                body: '''The pipeline failed.

                Check the details at ${env.BUILD_URL}.
                ''',
                attachLog: false  // No need to attach the log here, it's already attached in earlier stages
            )
        }
        unstable {
            emailext(
                to: 'nimeshmakevitage@gmail.com',
                subject: 'Build Unstable: ${env.JOB_NAME} - Build #${env.BUILD_NUMBER}',
                body: '''The pipeline is unstable.

                Check the details at ${env.BUILD_URL}.
                ''',
                attachLog: false  // No need to attach the log here, it's already attached in earlier stages
            )
        }
