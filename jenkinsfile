pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                echo 'Checking out the source code from the version control system...'
                echo 'Tool: Git'
            }
            post {
                success {
                    emailext (
                        to: "nimeshmakevitage@gmail.com",
                        subject: "Checkout SCM Successful: ${env.JOB_NAME} - Build #${env.BUILD_NUMBER}",
                        body: "The checkout SCM stage was successful.",
                        attachLog: true // Attach the log files
                    )
                }
                failure {
                    emailext (
                        to: "nimeshmakevitage@gmail.com",
                        subject: "Checkout SCM Failed: ${env.JOB_NAME} - Build #${env.BUILD_NUMBER}",
