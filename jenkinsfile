pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
            }
            post {
                success {
                    mail to: 'nimeshmakevitage@gmail.com',
                         subject: 'Build Status Email',
                         body: 'Build was Successful!'
                }
            }
        }
        stage("Test"){
            steps{
                echo "Testing..."
            }
        }
        stage("Deploy"){
            steps{
                echo "Deploying..."
            }
        }
       stage("complete"){
            steps{
                echo "completed."
            }
       }
    }
}
