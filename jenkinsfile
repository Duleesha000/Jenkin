pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'echo "Building the code..."'
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                sh 'echo "Running unit and integration tests..."'
            }
        }
        // Other stages remain unchanged...
    }
    
    post {
        always {
            emailext (
                to: "nimeshmakevitage@gmail.com",
                subject: "Pipeline Finished: ${env.JOB_NAME} - Build #${env.BUILD_NUMBER}",
                body: "The pipeline has finished running.\n\nCheck the details at ${env.BUILD_URL}.",
                attachLog: true // Attach the log files for the entire pipeline
            )
        }
    }
}
