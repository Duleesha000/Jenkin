pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building the codes...'
                // Your build commands go here
            }
        }

        stage('Unit and Integration Tests') {
            steps {
                echo 'Running unit and integration tests...'
                // Your testing commands go here
            }
            post {
                always {
                    emailext(
                        to: 'nimeshmakevitage@gmail.com',
                        subject: "Unit and Integration Tests Result - ${currentBuild.fullDisplayName}",
                        body: "Please find the attached logs for the unit and integration tests.",
                        attachLog: true // Attach the build log
                    )
                }
            }
        }

        stage('Code Analysis') {
            steps {
                echo 'Analyzing code...'
                // Your code analysis commands go here
            }
        }

        stage('Security Scan') {
            steps {
                echo 'Performing security scan...'
            }
            post {
                always {
                    emailext(
                        to: 'nimeshmakevitage@gmail.com',
                        subject: "Security Scan Result - ${currentBuild.fullDisplayName}",
                        body: "Please find the attached logs for the security scan.",
                        attachLog: true // Attach the build log
                    )
                }
            }
        }

        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to staging...'
                // Your deployment commands go here
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                echo 'Running integration tests on staging...'
                // Your integration test commands go here
            }
        }

        stage('Deploy to Production') {
            steps {
                echo 'Deploying to production...'
                // Your production deployment commands go here
            }
        }
    }
