post {
    success {
        emailext (
            to: "nimeshmakevitage@gmail.com",
            subject: "Stage Success: ${env.JOB_NAME} - Build #${env.BUILD_NUMBER}",
            body: "The pipeline stage was successful.",
            attachLog: true
        )
    }
    failure {
        emailext (
            to: "nimeshmakevitage@gmail.com",
            subject: "Stage Failed: ${env.JOB_NAME} - Build #${env.BUILD_NUMBER}",
            body: "The pipeline stage failed.",
            attachLog: true
        )
    }
}
